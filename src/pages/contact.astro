---
import { getCollection } from "astro:content";
import dayjs from "dayjs";
import { RelativeDate } from "../components/RelativeDate/RelativeDate";
import ProseLayout from "../layouts/ProseLayout.astro";

const events = await getCollection("now");
events.sort((a, b) => {
  return dayjs(b.data.date).isBefore(dayjs(a.data.date)) ? -1 : 1;
});

const title = "Contact Us";
const description = "Contact Form";
---

<ProseLayout title={title} description={description}>
    <section>
        
    
        <form action="#" method="POST" class="subscribe-content contact-form">
          <div class="inputWrapper">
            <input type="text" name="name" class="input" placeholder="Your Name" required>
          </div>
          
          <div class="inputWrapper">
            <input type="email" name="email" class="input" placeholder="Your Email" required>
          </div>
    
          <div class="inputWrapper">
            <textarea name="message" class="input message-area" placeholder="Your Message" rows="5" required></textarea>
          </div>
    
          <div class="inputWrapper">
            <button type="submit" class="iconButton">Send</button>
          </div>
          
    
          <div class="disclaimer">
            We respect your privacy. Your information is safe with us.
          </div>
        </form>
      </section>

  <style lang="scss">

.contact-form {
    display: flex;
    flex-direction: column;
    max-width: 600px;
    gap: var(--space-m);
    margin-inline: auto;
    position: relative;
}



.inputWrapper {
  position: relative;
  width: 100%;
  margin-bottom: var(--space-s);
}

.input {
  color: var(--gray-12);
  background: var(--gray-1);
  padding: var(--space-l);
  border: 2px solid var(--gray-12);
  border-radius: var(--radius-full);
  width: 100%;
  font-size: var(--step-0);
}

.message-area {
    min-height: 300px;
    resize: none;
    border-radius: 25px;
}

.input::placeholder {
  color: var(--gray-10);
  opacity: 0.7;
}

.input:focus {
  outline: 3px solid var(--amber-a5test);
  outline-offset: 2px;
}

.iconButton {
  background: var(--gray-12);
  color: var(--gray-1);
  padding: 12px 24px;
  border-radius: 10px;
  border: none;
  cursor: pointer;
  transition: background 0.3s;
  width: 100%;
  text-align: center;
  font-size: var(--step-0);
}

.iconButton:hover {
  background: var(--gray-10);
}

.iconButton:disabled {
  background: var(--gray-9);
  pointer-events: none;
}

.disclaimer {
  color: var(--gray-11);
  margin-top: var(--space-m);
  font-size: 0.875rem;
  text-align: center;
}




  </style>
</ProseLayout>
